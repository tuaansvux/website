<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/NguoiDungCssLayout/fonts.css" rel="stylesheet" />
    <link href="~/Content/NguoiDungCssLayout/screen.css" rel="stylesheet" />
    <link href="~/Content/NguoiDungCssLayout/NguoiDungCssLayout.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.6.3/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.pack.js"></script>
    <link href="~/NivoSlider/nivo-slider.css" rel="stylesheet" />
</head>
<body>
    <div id="ToanTrang">
        <section class="blank">
            <div class="flash">
                <div class="icDienThoai">
                    <i class="fa fa-phone" aria-hidden="true"></i>
                    09.06.45.89.50
                </div>
               @if ((Session["TaiKhoan"] == null) || (Session["TaiKhoan"].ToString() == ""))
               {
                    <div class="DangKyDangNhap">
                        @Html.Action("GioHangPartial", "GioHang")
                        <i class="fa fa-plus-square-o" aria-hidden="true"></i>
                        <a href="@Url.Action("DangKy", "NguoiDung")">Đăng ký</a>
                        <i class="fa fa-sign-in" aria-hidden="true"></i>
                        <a href="@Url.Action("DangNhap", "NguoiDung")">Đăng nhập</a>
                    </div>
               }
               else
               {
                <div class="DangKyDangNhap">
                    @Html.Action("GioHangPartial", "GioHang")
                    @Html.Action("NguoiDungPartial", "NguoiDung")
                </div>
               }
            </div>

            <div class="flash success" id="divDanhMuc">
                <div id="txtTimKiem">
                    @using (Html.BeginForm("KetQuaTimKiem", "TimKiem", FormMethod.Post))
                    {
                        @Html.TextBox("txtTimKiem", "", htmlAttributes: new { @class = "TextBoxTimKiem", @placeholder = "Nhập vào từ khóa cần tìm ..." })
                        <div id="divHinhAnhTimKiem">
                            <button type="submit"><img src="~/HinhAnh/Search2.png"></button>
                        </div>
                    }
                </div>
                <ul class="navMenu">
                    <li>
                        <i class="fa fa-home" aria-hidden="true"></i>
                        <a href="@Url.Action("Index","Home")">Trang chủ</a>
                    </li>
                    <li>
                        <i class="fa fa-envelope-o" aria-hidden="true"></i>
                        <a href="#">Liên hệ</a>
                    </li>
                    <li>
                        <i class="fa fa-question-circle" aria-hidden="true"></i>
                        <a href="#">Hướng dẫn</a>
                    </li>
                    <li>
                        <i class="fa fa-info" aria-hidden="true"></i>
                        <a href="#">Giới thiệu</a>
                    </li>
                    <li>
                        <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                        <a href="#">Tuyển dụng</a>
                    </li>
                </ul>
            </div>
        </section>

        <section>
            <div id="divMenuLeft">
                <div class="activity">
              @Html.Action("SachMoiPartial","Sach")
                </div>
            </div>
            <div id="slider" class="nivoSlider">
                <img src="~/HinhAnh/Anh1.jpg" />
                <img src="~/HinhAnh/Anh2.jpg" />
                <img src="~/HinhAnh/Anh3.jpg" />
                <img src="~/HinhAnh/Anh4.jpg" />
            </div>
            <div style="clear:both"></div>
        </section>

        <div id="NoiDung">
            @RenderBody()
        </div>

        <section>
            <div>
             @Html.Action("ChuDePartial","ChuDe")
            </div>
        </section>

        <section class="blank items">
            <div id="divLeft">
                <div class="item">
                    <div class="item-info">
                     @Html.Action("NhaXuatBanPartial","NhaXuatBan")
                    </div>
                    <img src="http://lorempixel.com/400/300/" alt="Image">
                </div>
            </div>
            <div id="divRight">
                @RenderSection("NoiDungBenPhai", false)
            </div>
            <div style="clear:both"></div>
            <div>
                <a href="@Url.Action("Index","Home")" class="button button-buy">Chào mừng bạn đến với trang Web bán sách số 1 Việt Nam</a>
            </div>
        </section>
    </div>
    <script type="text/javascript">
    $(window).load(function () {
        $('#slider').nivoSlider({ controlNav: false,nextText:'',prevText:''});
    });
    </script>
</body>
</html>
